<%- include('../partials/header') %>
<body>
    <a href="/">Home</a>
    <a href="/skills/">Skills</a>
    <h1><%= title %></h1>
    <form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
    <input type="text" name="skill" value="<%= skill.skill %>"><br>
    <label>
        <input type="checkbox" name="mastered" checked <%= skill.mastered ? 'checked' : ' ' %>>
